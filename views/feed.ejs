<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="../stylesheets/style.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
</head>

<body>
    <div class="nav" style=" width: 100%; height: 50px; background-color: black; color: white;">
        <h1>Todo app</h1>
    </div>
    </nav>
    <div class="container">
        <form action="/add" method="post" style="display: flex; margin-top: 30px; gap: 20px; width: 100%;">
            <div class="mb-3" style="width: 50%;">
                <input type="text" name="title" placeholder="Title" class="form-control" id="exampleInputEmail1"
                    aria-describedby="emailHelp">
            </div>
            <div class="mb-3" style="width: 50%;">
                <input type="text" name="disc" placeholder="Discription" class="form-control"
                    id="exampleInputPassword1">
            </div>
            <button style="padding: 0px 10px; width: 10%;height: 35px;" type="submit"
                class="btn btn-primary">Add</button>
        </form>
        <hr>
        <div style="background-color: transparent; margin-top: -15px;margin-bottom: -15px;" id="list">
            <h6>Title</h6>
            <h6>Discription</h6>
            <h6 style="margin-left: -20px;">Status</h6>
            <h6>Edit Delete</h6>
        </div>
        <hr>
        <% user.work.reverse().forEach(function(u){ %>
            <div id="list">
                <div class="title">
                    <h3>
                        <%=u.title%>
                    </h3>
                </div>
                <div class="disc">
                    <p>
                        <%=u.disc%>
                    </p>
                </div>
                <div class="status">
                    <p>
                        <%=u.status%>%
                    </p>
                </div>
                <div class="editdelete">
                    <a href="/edit/<%=u._id%>"><i class="ri-pencil-line"></i></a>
                    <a href="/delete/<%=u._id%>"><i class="ri-delete-bin-line"></i></a>
                </div>
            </div>
            <%})%>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>