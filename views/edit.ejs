<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="../stylesheets/style.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
</head>

<body>
    <div class="nav" style=" width: 100%; height: 50px; background-color: black; color: white;">
        <h1>Todo app</h1>
    </div>
    </nav>
    <div class="container">
        <form action="/edit/<%=user.work[index]._id%>" method="post"
            style="display: flex; margin-top: 30px; gap: 20px; width: 100%;">
            <div class="mb-3" style="width: 50%;">
                <input type="text" name="title" placeholder="Title" value="<%=user.work[index].title%>"
                    class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            </div>
            <div class="mb-3" style="width: 50%;">
                <input type="text" name="disc" placeholder="Discription" value="<%=user.work[index].disc%>"
                    class="form-control" id="exampleInputPassword1">
            </div>
            <div class="mb-3" style="width: 50%;">
                <input type="text" name="status" placeholder="Status" value="<%=user.work[index].status%>"
                    class="form-control" id="exampleInputPassword1">
            </div>
            <button style="padding: 0px 10px; width: 10%;height: 35px;" type="submit"
                class="btn btn-primary">Edit</button>
        </form>
        <hr>
        <div style="background-color: transparent; margin-top: -15px;margin-bottom: -15px;" id="list">
            <h6>Title</h6>
            <h6>Discription</h6>
            <h6 >Status</h6>
            <!-- <h6>Edit  Delete</h6> -->
        </div>
        <hr>
        <% user.work.reverse().forEach(function(u){ %>
            <div id="list">
                <div class="title">
                    <h3>
                        <%=u.title%>
                    </h3>
                </div>
                <div class="disc">
                    <p style="margin-left: 100px;">
                        <%=u.disc%>
                    </p>
                </div>
                <div class="status">
                    <p style="margin-left: 240px;">
                        <%=u.status%>%
                    </p>
                </div>
            </div>
            <%})%>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>